<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:Client.ViewModels"
			 x:DataType="vm:UsersPageViewModel"
             x:Class="Client.UsersPage">
	<Grid RowDefinitions="70, *, 85">
		<Grid Grid.Row="0" Background="#D28530">
			<!-- Courses Title -->
			<Border CornerRadius="5" Background="White" Padding="20" Height="44" Width="292" Margin="20,35,0,0" HorizontalAlignment="Left">
				<TextBlock Text="Пользователи" FontSize="20" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Border>
			<!-- Menu Icon -->
		</Grid>
		
		<ListBox Grid.Row="1" ItemsSource="{Binding Test}" Background="White">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Columns="3"/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border Background="#374151" Margin="2" CornerRadius="4">
						<TextBlock Margin="10,10,0,0" Foreground="White" Text="{Binding BlockName}"></TextBlock>
					</Border>
					
					</DataTemplate>
				</ListBox.ItemTemplate>
		</ListBox>
		<Grid Grid.Row="2">
			<!-- Add Burron -->
			<Button Background="#D28530" Width="210" Height="45" HorizontalAlignment="Right" Foreground="White" Command="{Binding ToAddUser}" Margin="30, 0">
				<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" >Добавить пользователя</TextBlock>
			</Button>

		</Grid>
	</Grid>
	
</UserControl>
