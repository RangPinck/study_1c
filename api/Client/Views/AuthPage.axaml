<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:Client.ViewModels"
			 x:DataType="vm:AuthPageViewModel"
             x:Class="Client.AuthPage">
	<Grid>
		<StackPanel>
	<TextBlock FontSize="16" Padding="0,20,10,10" >
		Email
	</TextBlock>
	<TextBox Width="325" Height="40" BorderBrush="#D28530" Text="{Binding Email}">
	</TextBox>
	<TextBlock FontSize="16" Padding="0,10,10,10" >
		Password
	</TextBlock>
	<TextBox Width="325" Height="40" BorderBrush="#D28530" Text="{Binding Password}">

	</TextBox>
		</StackPanel>
		<Button Grid.Row="2" Width="152" Height="44" Background="#D28530" Grid.Column="1" FontSize="20" HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"  Content="Вход" Foreground="White" CornerRadius="7" Command="{Binding Authorize}"></Button>
	</Grid>
</UserControl>
